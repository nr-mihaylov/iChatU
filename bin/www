#!/usr/bin/env node

/**
 * Module dependencies.
 */

var app = require('../app');
var debug = require('debug')('ichat:server');
var http = require('http');
var https = require('https');
var fs = require('fs');
var io = require('socket.io');
var ioAuth = require('../modules/socketioauth');
var mongoose = require('mongoose');
var auth = require('../modules/auth');
var ichat = require('../modules/ichat');
var roomHandler = require('../modules/roomHandler');

/**
 * Get port from environment and store in Express.
 */

var port = normalizePort(process.env.PORT || '3000');
app.set('port', port);

/**
 * Connect to database
 */

var db = mongoose.connect('mongodb://localhost/ichatu').connection;
db.on('error', function(err) {
  console.log(err);
});

db.once('open', function() {
  roomHandler.init();
});

/**
 * Create HTTP server.
 */

var server = http.createServer(app);

/**
 * Create HTTPS server.
 */

var sslServer = https.createServer({

  key: fs.readFileSync('./bin/key.pem', 'utf8'),
  cert: fs.readFileSync('./bin/server.crt', 'utf8')

}, app);

/**
 * Authentication.
 */

ioAuth(io(server), {

  authenticate: auth.init,
  postAuthenticate: ichat.init,
  timeout: 3000

});

/**
 * Listen on provided port, on all network interfaces.
 */

server.listen(port);
server.on('error', onError);
server.on('listening', onListening);

sslServer.listen(3443);

/**
 * Normalize a port into a number, string, or false.
 */

function normalizePort(val) {
  var port = parseInt(val, 10);

  if (isNaN(port)) {
    // named pipe
    return val;
  }

  if (port >= 0) {
    // port number
    return port;
  }

  return false;
}

/**
 * Event listener for HTTP server "error" event.
 */

function onError(error) {
  if (error.syscall !== 'listen') {
    throw error;
  }

  var bind = typeof port === 'string'
    ? 'Pipe ' + port
    : 'Port ' + port;

  // handle specific listen errors with friendly messages
  switch (error.code) {
    case 'EACCES':
      console.error(bind + ' requires elevated privileges');
      process.exit(1);
      break;
    case 'EADDRINUSE':
      console.error(bind + ' is already in use');
      process.exit(1);
      break;
    default:
      throw error;
  }
}

/**
 * Event listener for HTTP server "listening" event.
 */

function onListening() {
  var addr = server.address();
  var bind = typeof addr === 'string'
    ? 'pipe ' + addr
    : 'port ' + addr.port;
  debug('Listening on ' + bind);
}
